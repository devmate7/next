{
	"compilerOptions": {
		"allowJs": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",

		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],

		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},

	"exclude": [
		"node_modules"
	],

	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx"
	]
}
